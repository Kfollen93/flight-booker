<%= simple_form_for(:flight_search, method: :get, url: flights_path) do |f| %>
  <%= f.error_notification %>
  <%= f.input :from_airport_code, collection: @airport_labels, label: 'From Airport', include_blank: false %>
  <%= f.input :to_airport_code, collection: @airport_labels, label: 'To Airport', include_blank: false %>
  <%= f.input :passengers, collection: @passengers, label: 'Passengers', include_blank: false %>
  <%= f.input :date_of_flight, collection: @dates, label: 'Flight Date', include_blank: false %>
  <%= f.button :submit, 'Search' %>
<% end %>
