<div class="container"> 
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Flight ID</th>
        <th>Flight Date</th>
        <th>Departure Airport</th>
        <th>Arrival Airport</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td> <%= @selected_booking.flight_id %> </td>
        <td> <%= @selected_booking.flight.flight_date %> </td>
        <td> <%= @selected_booking.flight.from_airport.airport_code %> </td>
        <td> <%= @selected_booking.flight.to_airport.airport_code %> </td>
      </tr>
    </tbody>
  </table>
</div>

 <%= simple_form_for(@booking) do |f| %>
      <%= f.fields_for :passengers do |p| %>
        <%= p.input :name, error: 'Passenger name is mandatory, please specify one.' %>
        <%= p.input :email, error: 'Passenger email is mandatory, please specify one.' %> <br>
    <% end %> <br>
    <%= f.hidden_field :flight_id, value: params[:booking][:flight_id] %>
  <%= f.submit "Submit Booking" %>
<% end %>