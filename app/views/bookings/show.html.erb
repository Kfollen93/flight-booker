<h1 class="title">
  Thank You for Booking with Odin Airlines
</h1>


<br>

<div class="container"> 
  <table class="table table-bordered">
    <thead>
      <tr>
        <th>Flight ID</th>
        <th>Flight Date</th>
        <th>Departure Airport</th>
        <th>Arrival Airport</th>
        <th>Flight Duration</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td> <%= @booking.flight_id %> </td>
        <td> <%= @booking.flight.flight_date %> </td>
        <td> <%= @booking.flight.from_airport.airport_code %> </td>
        <td> <%= @booking.flight.to_airport.airport_code %> </td>
        <td> <%= @booking.flight.duration %> </td>
      </tr>
    </tbody>
  </table>

<div class="subtitle">
  <h2 class="subtitle">
    Passengers
  </h2>
    <% @booking.passengers.each_with_index do |passenger, index| %>
      <%= "#{index + 1}: #{passenger.name.titleize}"%>
      <!-- Bag Checked Icon -->
       <svg width="1.4em" height="1.4em" viewBox="0 0 16 16" class="bi bi-bag-check-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
      <path fill-rule="evenodd" d="M5.5 3.5a2.5 2.5 0 0 1 5 0V4h-5v-.5zm6 0V4H15v10a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V4h3.5v-.5a3.5 3.5 0 1 1 7 0zm-.646 5.354a.5.5 0 0 0-.708-.708L7.5 10.793 6.354 9.646a.5.5 0 1 0-.708.708l1.5 1.5a.5.5 0 0 0 .708 0l3-3z"/>
      </svg> <br>
    <% end %>
  </div>
</div>


